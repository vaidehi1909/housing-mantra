// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Project {
  id              String         @id @default(cuid())
  title           String
  description     String
  location        String
  price           String
  propertyType    String
  status          String        @default("Active")
  amenities       String        // JSON string of amenities
  isReraRegistered Boolean      @default(false)
  reraNumbers     String?        // JSON string of RERA numbers
  landmark        String?
  landmarkDistance String?
  latitude        String?
  longitude       String?
  otherUrls       String?        // JSON array
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt
  images          String?    // JSON string of RERA numbers
}
